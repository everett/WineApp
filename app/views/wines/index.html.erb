<h1>Listing wines</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Varietal</th>
    <th>Year</th>
    <th>Color</th>
    <th>Country</th>
    <th>Region</th>
    <th>Label</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @wines.each do |wine| %>
  <tr>
    <td><%= wine.name %></td>
    <td><%= wine.varietal %></td>
    <td><%= wine.year %></td>
    <td><%= wine.color %></td>
    <td><%= wine.country %></td>
    <td><%= wine.region %></td>
    <td><%= wine.label %></td>
    <td><%= link_to 'Show', wine %></td>
    <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
    <td><%= link_to 'Destroy', wine, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

